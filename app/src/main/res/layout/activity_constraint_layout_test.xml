<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.suxuantech.erpsys.test.ConstraintLayoutTestActivity">

    <Button
        android:id="@+id/teststu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="teststu"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="136dp"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="280dp" />

    <Button
        android:id="@+id/full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全沉浸"
        android:layout_below="@+id/teststu"
        android:layout_alignStart="@+id/scro"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="176dp" />
    <Button
        android:id="@+id/scro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scro"
        android:layout_below="@+id/teststu"
        android:layout_alignStart="@+id/teststu"
        tools:layout_editor_absoluteY="53dp"
        tools:layout_editor_absoluteX="16dp" />
    <Button
        android:id="@+id/option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择"
        android:layout_below="@+id/scro"
        android:layout_alignStart="@+id/scro"
        tools:layout_editor_absoluteY="196dp"
        tools:layout_editor_absoluteX="-21dp" />
    <Button
        android:id="@+id/BaseTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="权限基本测试页面"
        android:layout_marginEnd="88dp"
        android:layout_below="@+id/rec"
        android:layout_alignParentEnd="true"
        tools:layout_editor_absoluteY="-5dp"
        tools:layout_editor_absoluteX="16dp" />
    <Button
        android:id="@+id/rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="列表"
        android:layout_below="@+id/option"
        android:layout_alignStart="@+id/option"
        tools:layout_editor_absoluteY="244dp"
        tools:layout_editor_absoluteX="143dp" />
    <Button
        android:id="@+id/setTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:layout_alignBottom="@+id/BaseTest"
        android:layout_toStartOf="@+id/BaseTest"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="192dp" />
    <Button
        android:id="@+id/setLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左边"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/setRight"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="88dp" />
    <Button
        android:id="@+id/setRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="右边"
        android:layout_below="@+id/rec"
        android:layout_toStartOf="@+id/BaseTest"
        tools:layout_editor_absoluteY="139dp"
        tools:layout_editor_absoluteX="176dp" />
    <Button
        android:id="@+id/fold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="折叠日历"
        android:layout_below="@+id/rec"
        android:layout_toStartOf="@+id/BaseTest"
        tools:layout_editor_absoluteY="164dp"
        tools:layout_editor_absoluteX="264dp" />
</android.support.constraint.ConstraintLayout>
