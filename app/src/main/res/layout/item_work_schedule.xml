<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px55"
        android:paddingRight="@dimen/px55"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/myValue_33"
            android:drawablePadding="@dimen/px40"
            android:layout_marginTop="@dimen/px40"
            android:layout_marginBottom="@dimen/px30"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/icon_chip_select_number"
            android:id="@+id/tv_customer_name"
            android:layout_weight="1"
            android:text="1111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_service_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/icon_watches"
            android:drawablePadding="@dimen/px10"
            android:gravity="center_vertical"
            android:text="@string/in_service" />
    </LinearLayout>
     <TextView
         android:layout_marginLeft="@dimen/px55"
        android:id="@+id/tv_customer_order_id"
         android:textColor="@color/myValue_33"
         android:drawablePadding="@dimen/px40"
         android:layout_marginBottom="@dimen/px40"
         android:gravity="center_vertical"
         android:drawableLeft="@drawable/icon_chip_select_number"
         android:text="1111"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" />
    <View style="@style/line"/>
    <TextView
        android:textColor="@color/textHint_99"
        android:layout_marginTop="@dimen/px40"
        android:layout_marginLeft="@dimen/px55"
        android:text="@string/makeup_date"
        android:id="@+id/tv_makeup_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/textHint_99"
        android:text="@string/package_name"
        android:layout_marginTop="@dimen/px40"
        android:layout_marginLeft="@dimen/px55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/textHint_99"
        android:layout_marginTop="@dimen/px40"
        android:text="@string/outlets_orders"
        android:layout_marginBottom="@dimen/px40"
        android:layout_marginLeft="@dimen/px55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>