<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.suxuantech.erpsys.activity.ServiceDetailListActivity">
    <LinearLayout
        android:paddingLeft="@dimen/px55"
        android:paddingRight="@dimen/px55"
        android:paddingTop="@dimen/px40"
        android:paddingBottom="@dimen/px40"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/icon_head"
            android:layout_width="@dimen/px145"
            android:layout_height="@dimen/px145"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/px40"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/myValue_33"
                android:textSize="@dimen/xs42"
                android:text="拍照服务"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="@dimen/xs35"
                    android:textColor="@color/textHint_99"
                    android:layout_weight="1"
                    android:text="拍照服务"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/xs30"
                    android:textColor="@color/textHint_99"
                    android:drawablePadding="@dimen/px15"
                    android:drawableLeft="@drawable/icon_watches"
                    android:text="@string/time_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View android:layout_marginLeft="@dimen/px55" android:layout_marginRight="@dimen/px55" style="@style/line"/>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingLeft="@dimen/px55"
        android:paddingRight="@dimen/px55"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/px35"
            android:lineSpacingExtra="@dimen/px22"
            android:textColor="@color/myValue_33"
            android:textSize="@dimen/xs44"
            android:text="获奖感言"
            android:drawablePadding="@dimen/px10"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px120" />
        <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
            android:id="@+id/smrv_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView>
        <TextView
            android:layout_gravity="right"
            android:textColor="@color/textHint_99"
            android:textSize="@dimen/xs36"
            android:text="@string/photographic_remarks"
            android:drawablePadding="@dimen/px10"
            android:gravity="center_vertical|right"
            android:drawableLeft="@drawable/icon_location"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px100" />
        <TextView
            android:layout_gravity="right"
            android:textColor="@color/textHint_99"
            android:textSize="@dimen/xs36"
            android:text="@string/zero"
            android:drawablePadding="@dimen/px10"
            android:gravity="center_vertical|right"
            android:drawableLeft="@drawable/icon_zan"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px100" />
    </LinearLayout>
</LinearLayout>
