<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        style="@style/CustomerInformationContain">
        <TextView
            style="@style/CustomerInformationKey"
            android:text="@string/notice_time" />
        <TextView
            android:drawableRight="@drawable/arrows_right_gray"
            android:id="@+id/tv_notice_time"
            style="@style/CustomerInformationValue"
            android:hint="@string/please_select_notice_time" />
    </LinearLayout>
    <View style="@style/line"/>
    <LinearLayout
        style="@style/CustomerInformationContain">
        <TextView
            style="@style/CustomerInformationKey"
            android:text="@string/notice_staff" />
        <TextView            android:drawableRight="@drawable/arrows_right_gray"
            android:id="@+id/tv_notice_staff"
            style="@style/CustomerInformationValue"
            android:hint="@string/please_select_notice_staff" />
    </LinearLayout>
    <View style="@style/line"/>
    <LinearLayout
        style="@style/CustomerInformationContain">
        <TextView
            style="@style/CustomerInformationKey"
            android:text="@string/notice_status" />
        <TextView            android:drawableRight="@drawable/arrows_right_gray"
            android:id="@+id/tv_notice_status"
            style="@style/CustomerInformationValue"
            android:hint="@string/please_select_notice_status" />
    </LinearLayout>
    <View style="@style/line"/>
    <LinearLayout
        android:layout_height="@dimen/px245"
        style="@style/CustomerInformationContain">
        <TextView
            android:layout_marginTop="@dimen/px40"
            android:layout_gravity="top"
            style="@style/CustomerInformationKey"
            android:text="@string/notice_remarks" />
        <EditText
            android:gravity="top"
            android:minLines="3"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/px40"
            android:background="@null"
            android:id="@+id/et_notice_remarks"
            style="@style/CustomerInformationValue"
            android:hint="@string/please_input_notice_remarks" />
    </LinearLayout>
</LinearLayout>