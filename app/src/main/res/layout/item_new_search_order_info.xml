<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/px55"
    android:padding="@dimen/px30">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/px30"
            android:textColor="@color/textColor"
            android:drawableLeft="@drawable/icon_order_customer_name"
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="11" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="@dimen/px30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="@dimen/px30"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/px30"
            android:drawableLeft="@drawable/icon_order_custmoer_package"
            android:textColor="@color/hintColor"
            android:id="@+id/tv_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="11" />

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="11" />
    </LinearLayout>
    <View style="@style/line" />
    <TextView
        android:id="@+id/tv_consumption_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="11" />
    <TextView
        android:id="@+id/tv_package_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="11" />
    <TextView
        android:id="@+id/tv_order_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="11" />
</LinearLayout>