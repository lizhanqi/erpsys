<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px55"
    android:paddingRight="@dimen/px55"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--上边-->
    <LinearLayout
        android:paddingBottom="@dimen/px40"
        android:paddingTop="@dimen/px40"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="用户名"
            android:textColor="@color/myValue_33"
            android:id="@+id/tv_user_name"
            android:textSize="@dimen/xs44"
            android:drawableLeft="@drawable/icon_order_item_customer_name"
            android:drawablePadding="@dimen/px40"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_consume_type"
            android:layout_weight="0"
            android:textSize="@dimen/xs44"
            android:textColor="@color/textHint_99"
            android:text="消费类型"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/px30"
            android:text="订单号"
            android:textColor="@color/mainNav_66"
            android:id="@+id/tv_order_id"
            android:textSize="@dimen/xs44"
            android:drawableLeft="@drawable/icon_customer_remarks"
            android:drawablePadding="@dimen/px40"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View  style="@style/line"/>
    <!--中间详情-->
    <LinearLayout
        android:id="@+id/ll_details"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/px30"
        android:layout_marginTop="@dimen/px30"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_infor"
            android:lineSpacingExtra="@dimen/px48"
            android:text="552555"
            style="@style/customer_order_detail"/>
    <!--右边-->
        <!--这里测试一个制表符\t代表2个字符-->
        <TextView
            android:lineSpacingExtra="@dimen/px15"
            android:id="@+id/tv_money_details"
            android:layout_gravity="right"
            android:gravity="center_vertical|right"
            style="@style/customer_order_detail"
            android:text="¥:2\n\t\t\t\t\t总价"  />
    </LinearLayout>
        <View  style="@style/line"/>
</LinearLayout>



    <com.lizhanqi.www.stepview.HorizontalStepView
        android:id="@+id/horizontalSteps"
        android:layout_marginTop="@dimen/px30"
        android:layout_marginBottom="@dimen/px30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.lizhanqi.www.stepview.HorizontalStepView>
</LinearLayout>