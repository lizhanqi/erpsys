<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/px50"
    android:paddingVertical="@dimen/xs30">

    <ImageView
        android:id="@+id/img_contact_head"
        android:layout_width="@dimen/px100"
        android:layout_height="@dimen/px100"
        android:background="@drawable/sp_head"
        android:scaleType="fitCenter" />

    <TextView
        android:textColor="@color/textColor"
        android:id="@+id/tv_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px35"
        android:layout_weight="1"
        android:drawableRight="@drawable/arrows_right_gray"
        android:text="222"
        android:textSize="@dimen/xs50" />

    <CheckBox
        android:id="@+id/cb_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>