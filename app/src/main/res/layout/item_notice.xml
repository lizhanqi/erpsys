<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center_vertical"
    android:paddingRight="@dimen/px55"
    android:paddingLeft="@dimen/px55"
    android:paddingTop="@dimen/px33"
    android:paddingBottom="@dimen/px33"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_notice_title"
        android:textSize="@dimen/xs44"
        android:lineSpacingExtra="@dimen/px22"
        android:textColor="@color/myValue_33"
        android:text="1111"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/xs30"
        android:textColor="@color/textHint_99"
        android:text="昨天"
        android:id="@+id/tv_notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>