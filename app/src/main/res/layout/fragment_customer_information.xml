<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/myBackground_f7"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.CustomerInformationFragment">
    <!--客户资料-->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">
                <!--服务店面-->
                <LinearLayout
                    style="@style/CustomerInformationContain">
                    <TextView
                        style="@style/CustomerInformationKey"
                        android:text="@string/service_stores" />

                    <TextView
                        android:id="@+id/tv_store_name"
                        style="@style/CustomerInformationValue"
                        android:text="@string/service_stores" />
                </LinearLayout>
                <!--1  4个-->
                <LinearLayout
                    android:layout_marginTop="@dimen/px30"
                    style="@style/CustomerInformationContain">

                    <TextView
                        style="@style/CustomerInformationKey"
                        android:text="订单编号" />

                    <TextView
                        android:id="@+id/customer_id"
                        style="@style/CustomerInformationValue"
                        android:text="@string/customer_id" />
                </LinearLayout>
                <View
                    style="@style/line"/>
                <View
                    style="@style/line"/>
                <LinearLayout
                    style="@style/CustomerInformationContain">

                    <TextView
                        style="@style/CustomerInformationKey"
                        android:text="订单日期" />

                    <TextView
                        android:id="@+id/tv_subscribe_date"
                        style="@style/CustomerInformationValue"
                        android:hint="@string/please_select_subscribe_date" />
                </LinearLayout>
                <View
                    style="@style/line"/>
                <LinearLayout
                    style="@style/CustomerInformationContain">

                    <TextView
                        style="@style/CustomerInformationKey"
                        android:text="@string/consume_type" />

                    <TextView android:id="@+id/tv_consume_type"
                        style="@style/CustomerInformationValue"
                      />
                </LinearLayout>
                <View
                    style="@style/line"/>
                <LinearLayout
                    style="@style/CustomerInformationContain">

                    <TextView
                        style="@style/CustomerInformationKey"
                        android:text="新单类型" />

                    <TextView android:id="@+id/tv_neworder_type"
                        style="@style/CustomerInformationValue"
                     />
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/px30"
                    style="@style/CustomerInformationContain">

                    <TextView
                        style="@style/CustomerInformationKey"
                        android:text="@string/woman_name" />

                    <TextView
                        android:id="@+id/tv_woman_name"
                        style="@style/CustomerInformationValue"
                        android:hint="@string/please_select_name" />
                </LinearLayout>
                <View
                    style="@style/line"/>
                <LinearLayout
                    style="@style/CustomerInformationContain">

                    <TextView
                        style="@style/CustomerInformationKey"
                        android:text="@string/woman_phone" />

                    <TextView
                        android:id="@+id/tv_woman_phone"
                        style="@style/CustomerInformationValue"
                        android:hint="@string/please_input_phone_number" />
                </LinearLayout>

                <View
                    style="@style/line"/>
                <LinearLayout
                    style="@style/CustomerInformationContain">

                    <TextView
                        style="@style/CustomerInformationKey"
                        android:text="女士微信" />

                    <TextView
                        android:background="@null"
                        android:id="@+id/tv_woman_wechat"
                        style="@style/CustomerInformationValue"
                      />
                </LinearLayout>

                <View
                    style="@style/line"/>
                <LinearLayout
                    style="@style/CustomerInformationContain">

                    <TextView
                        style="@style/CustomerInformationKey"
                        android:text="女士生日" />

                    <TextView
                        android:id="@+id/tv_woman_birthday"
                        style="@style/CustomerInformationValue"
                />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/px30"
                    style="@style/CustomerInformationContain">

                    <TextView
                        style="@style/CustomerInformationKey"
                        android:text="@string/man_name" />

                    <TextView
                        android:id="@+id/tv_man_name"
                        style="@style/CustomerInformationValue"
                        android:hint="@string/please_select_name" />
                </LinearLayout>
                <View
                    style="@style/line"/>
                <LinearLayout
                    style="@style/CustomerInformationContain">

                    <TextView
                        style="@style/CustomerInformationKey"
                        android:text="@string/man_phone" />

                    <TextView
                        android:background="@null"
                        android:id="@+id/tv_man_phone"
                        style="@style/CustomerInformationValue"
                        android:hint="@string/please_input_phone_number" />
                </LinearLayout>

                <View
                    style="@style/line"/>
                <LinearLayout
                    style="@style/CustomerInformationContain">

                    <TextView
                        style="@style/CustomerInformationKey"
                        android:text="男士微信" />

                    <TextView
                        android:id="@+id/tv_man_wechat"
                        style="@style/CustomerInformationValue"
                          />
                </LinearLayout>

                <View
                    style="@style/line"/>
                <LinearLayout
                    style="@style/CustomerInformationContain">

                    <TextView
                        style="@style/CustomerInformationKey"
                        android:text="男士生日" />

                    <TextView
                        android:id="@+id/tv_man_birthday"
                        style="@style/CustomerInformationValue"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/px30"
                    style="@style/CustomerInformationContain">

                    <TextView
                        style="@style/CustomerInformationKey"
                        android:text="结婚日期" />

                    <TextView
                        android:id="@+id/tv_marry_date"
                        style="@style/CustomerInformationValue"
                        />
                </LinearLayout>


                <LinearLayout
                android:layout_marginTop="@dimen/px30"
                style="@style/CustomerInformationContain">

                <TextView
                    style="@style/CustomerInformationKey"
                    android:text="销售门市" />

                <TextView
                    android:id="@+id/tv_reception"
                    style="@style/CustomerInformationValue"
                  />
            </LinearLayout>
                <View
                    style="@style/line"/>
                <LinearLayout
                    style="@style/CustomerInformationContain">

                    <TextView
                        style="@style/CustomerInformationKey"
                        android:text="网销门市" />

                    <TextView
                        android:id="@+id/tv_reception_market"
                        style="@style/CustomerInformationValue"
                       />
                </LinearLayout>
                <View
                    style="@style/line"/>
                <LinearLayout
                style="@style/CustomerInformationContain">

                <TextView
                    style="@style/CustomerInformationKey"
                    android:text="门市主管" />

                <TextView
                    android:id="@+id/tv_reception_governor"
                    style="@style/CustomerInformationValue"
                />
            </LinearLayout>




                <LinearLayout
                    android:layout_marginTop="@dimen/px30"
                    style="@style/CustomerInformationContain">

                    <TextView
                        style="@style/CustomerInformationKey"
                        android:text="客户邮箱" />

                    <TextView
                        android:id="@+id/tv_email"
                        style="@style/CustomerInformationValue"
                        />
                </LinearLayout>
                <View
                    style="@style/line"/>
                <LinearLayout
                    style="@style/CustomerInformationContain">

                    <TextView
                        style="@style/CustomerInformationKey"
                        android:text="家庭住址" />

                    <TextView
                        android:id="@+id/tv_address"
                        style="@style/CustomerInformationValue"
                        />
                </LinearLayout>
                <View
                    style="@style/line"/>
                <LinearLayout
                    style="@style/CustomerInformationContain">

                    <TextView
                        style="@style/CustomerInformationKey"
                        android:text="客户备注" />

                    <TextView
                        android:id="@+id/tv_remarks"
                        style="@style/CustomerInformationValue"
                        />
                </LinearLayout>




            </LinearLayout>

            <View
                style="@style/line"/>
            <Button
                android:visibility="gone"
                android:id="@+id/btn_submint"
                android:layout_marginTop="@dimen/px100"
                android:layout_marginBottom="@dimen/px60"
                android:text="@string/submit"
                android:layout_marginLeft="@dimen/px55"
                android:layout_marginRight="@dimen/px55"
                android:textSize="@dimen/xs44"
                android:textColor="@color/white"
                android:background="@drawable/login_button_sp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px115" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>
