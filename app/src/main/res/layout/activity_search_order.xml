<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:background="@color/myBackground_f7"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.suxuantech.erpsys.activity.SearchOrderActivity">
    <include layout="@layout/navigation_search_haed"/>
    <include layout="@layout/head_search_history" android:id="@+id/in_head_search"/>
    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:layout_weight="1"
        android:id="@+id/ptr_refresh"
        android:layout_marginLeft="@dimen/px55"
        android:layout_marginRight="@dimen/px55"
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="false"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/smr_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView>
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>
        <View
           style="@style/line"/>
    <Button
        android:layout_marginBottom="@dimen/px30"
        android:layout_below="@id/ptr_refresh"
        android:id="@+id/btn_clear_search_history"
        android:background="@color/mainNavline_e7"
        android:textColor="@color/textHint_99"
        android:layout_marginTop="@dimen/px80"
        android:layout_marginLeft="@dimen/px55"
        android:layout_marginRight="@dimen/px55"
        android:text="@string/clear_search_history"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px115" />

</LinearLayout>
