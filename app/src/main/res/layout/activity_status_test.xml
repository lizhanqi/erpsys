<?xml version="1.0" encoding="utf-8"?>
<!--测试-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="107dp"
        android:layout_marginTop="52dp"
        android:text="DrawableCompat修改底部" />
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"
        android:text="StatusUtils.setNavigationBarColor" />
    <Button
        android:id="@+id/or1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DrawableCompat title"
        android:layout_below="@+id/button1"
        android:layout_alignStart="@+id/button1" />

    <Button
        android:id="@+id/or2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button1"
        android:layout_below="@+id/or1"
        android:text="setStatusBarColor" />

    <Button
        android:id="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/or2"
        android:layout_below="@+id/or2"
        android:text="setSystemBarColor" />

    <Button
        android:id="@+id/c2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111"
        android:layout_below="@+id/c1"
        android:layout_alignStart="@+id/c1" />
    <Button
        android:id="@+id/q1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐藏状态栏"
        android:layout_below="@+id/c1"
        android:layout_alignStart="@+id/c1" />

    <Button
        android:id="@+id/q2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示状态栏"
        android:layout_below="@+id/c1"
        android:layout_alignEnd="@+id/or1" />


    <Button
        android:id="@+id/tb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tbshow"
        android:layout_marginEnd="37dp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/tb2"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/tb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tbhide"
        android:layout_alignStart="@+id/c2"
        android:layout_below="@+id/c2" />

    <Button
        android:id="@+id/tsy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hengping"
        android:layout_marginEnd="48dp"
        android:layout_alignBaseline="@+id/tb1"
        android:layout_alignBottom="@+id/tb1"
        android:layout_toStartOf="@+id/tb1" />
</RelativeLayout>

