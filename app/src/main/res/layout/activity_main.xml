<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/teststu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="teststu"
 />
    <Button
        android:id="@+id/full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全沉浸"
        android:layout_below="@+id/setLeft"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />
    <Button
        android:id="@+id/scro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scro"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/full" />

    <Button
        android:id="@+id/option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择"
        android:layout_below="@+id/rec"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/BaseTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="权限测试"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/setRight"
        android:layout_alignEnd="@+id/setRight" />

    <Button
        android:id="@+id/rec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="列表"
        android:layout_below="@+id/setTitle"
        android:layout_alignParentStart="true" />



    <Button
        android:id="@+id/setTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:layout_below="@+id/teststu"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/setLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左边"
        android:layout_below="@+id/BaseTest"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <Button
        android:id="@+id/setRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="右边"
        android:layout_below="@+id/option"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />
    <TextView
        android:background="@color/album_ColorPrimary"
        android:id="@+id/fold"
        android:textSize="@dimen/xs50"
        android:layout_width="@dimen/px1080"
        android:layout_height="wrap_content"
        android:text="折叠日历"
        android:layout_above="@+id/scro"
        android:layout_alignStart="@+id/scro" />
</RelativeLayout>

