<?xml version="1.0" encoding="utf-8"?>
<!--自定义顶部导航view组合-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_weight="0"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px144">
    <com.suxuantech.erpsys.views.AdjustDrawableTextView
        android:layout_weight="0"
            android:paddingRight="@dimen/px55"
            android:paddingLeft="@dimen/px55"
            android:drawableLeft="@drawable/arrows_left_black"
            android:id="@+id/tv_nav_left"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    <android.support.design.widget.TextInputEditText
        android:drawablePadding="@dimen/px30"
        android:layout_marginBottom="@dimen/px32"
        android:layout_marginTop="@dimen/px32"
        android:hint="输入手机号/订单号/姓名搜索"
        android:paddingLeft="@dimen/px30"
        android:drawableLeft="@drawable/icon_soso"
        android:background="@drawable/sp_search"
        android:layout_weight="1"
      android:layout_alignLeft="@id/tv_nav_right"
        android:textSize="@dimen/xs40"
        android:layout_centerInParent="true"
        android:id="@+id/tiet_nav_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.suxuantech.erpsys.views.AdjustDrawableTextView
        android:text="666"
        android:layout_weight="0"
        android:id="@+id/tv_nav_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/px55"
        android:paddingRight="@dimen/px55" />
    </LinearLayout>
    <View
        style="@style/line"/>
    </LinearLayout>
