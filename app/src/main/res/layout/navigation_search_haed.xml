<?xml version="1.0" encoding="utf-8"?>
<!--自定义顶部导航view组合-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/sp_gradual_change"
    android:id="@+id/ll_search_root"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_weight="0"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px144">
    <com.suxuantech.erpsys.ui.widget.AdjustDrawableTextView
             android:layout_weight="0"
            android:paddingRight="@dimen/px55"
            android:paddingLeft="@dimen/px55"
            android:drawableLeft="@drawable/arrows_left_black"
            android:id="@+id/tv_nav_search_left"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    <com.suxuantech.erpsys.ui.widget.OneKeyClearAutoCompleteText
        android:layout_gravity="center"
        android:singleLine="true"
        android:imeOptions="actionSearch"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/px30"
        android:drawablePadding="@dimen/px30"
        android:layout_marginBottom="@dimen/px15"
        android:layout_marginTop="@dimen/px15"
        android:hint="@string/hint_input_phonenumber_or_ordernumber_or_name_search"
        android:drawableLeft="@drawable/icon_soso"
        android:background="@drawable/sp_search"
        android:layout_weight="1"
        android:textSize="@dimen/xs40"
        android:layout_centerInParent="true"
        android:id="@+id/tiet_nav_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80" />
    <com.suxuantech.erpsys.ui.widget.AdjustDrawableTextView
        android:layout_weight="0"
        android:id="@+id/tv_nav_search_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/px55"
        android:paddingRight="@dimen/px55" />
    </LinearLayout>
    <View
        style="@style/line"/>
    </LinearLayout>
