<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/px30"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_msg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <TextView
            android:id="@+id/tv_msg_notice_title"
                android:textSize="@dimen/xs44"
                android:textColor="@color/themeColor"
                android:drawablePadding="@dimen/px20"
                android:drawableLeft="@drawable/icon_msg_task"
                android:text="消息通知:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_msg_notice_details"
        android:textSize="@dimen/xs40"
        android:textColor="@color/myValue_33"
        android:text="消息详情"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_notice_msg_details"
      android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_below="@+id/ll_msg"
        android:textSize="@dimen/xs40"
        android:textColor="@color/textHint_99"
        android:text="@string/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>