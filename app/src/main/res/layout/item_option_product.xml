<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_fa"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/px40"
    android:paddingLeft="@dimen/px55"
    android:paddingRight="@dimen/px55"
    android:paddingTop="@dimen/px40">
    <TextView
        android:id="@+id/tv_product_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="sss" />
    <TextView
        android:id="@+id/tv_now_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
  />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageButton
            android:visibility="gone"
            android:id="@+id/bt_minus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/themeColor"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_add_white" />

        <TextView
            android:padding="@dimen/px20"
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
        <ImageButton
            android:id="@+id/bt_plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/themeColor"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_add_white" />
    </LinearLayout>
</LinearLayout>