<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingLeft="@dimen/px55"
        android:paddingTop="@dimen/px40"
        android:paddingBottom="@dimen/px40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/cb_product"
            android:layout_marginRight="@dimen/px40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="产品名"
            android:background="@color/white"
            android:textSize="@dimen/xs44"
            android:textColor="@color/mainNav_66"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@color/color_fa"
        android:paddingTop="@dimen/px40"
        android:paddingBottom="@dimen/px40"
        android:paddingLeft="@dimen/px55"
        android:paddingRight="@dimen/px55"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/view_placeholder"
            android:layout_marginRight="@dimen/px60"
            android:layout_width="@dimen/px40"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_product"
            android:src="@drawable/img_placeholder"
            android:layout_width="@dimen/px240"
            android:layout_height="@dimen/px240" />
        <TextView
            android:layout_marginLeft="@dimen/px40"
            android:lineSpacingExtra="@dimen/px14"
            android:text="产品类型：xx\n\n 整件状态：xxx\n取件日期：xxx"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:lineSpacingExtra="@dimen/px14"
            android:gravity="right"
            android:text="人民币：xx\n 数量：xxx\n\n服次：xxx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>