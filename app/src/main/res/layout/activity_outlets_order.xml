<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.suxuantech.erpsys.activity.OutletsOrderActivity">
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/navigation_haed_user_defined"/>
        <!--订单编号-->
    <LinearLayout
        android:id="@+id/ll_order_id"
        android:paddingRight="@dimen/px55"
        android:paddingLeft="@dimen/px55"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px155">
        <TextView
            android:layout_weight="0"
            android:textColor="@color/myValue_33"
            android:gravity="center"
            android:textSize="@dimen/xs44"
            android:drawablePadding="@dimen/px30"
            android:drawableLeft="@drawable/icon_order"
            android:text="@string/order_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_order_id"
            android:textColorHint="@color/textHint_99"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textColor="@color/myValue_33"
            android:hint="@string/please_input_order_id"
            android:textSize="@dimen/xs44"
            android:drawablePadding="@dimen/px30"

            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>
    <View
        android:background="@color/mainNavline_e7"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px2"/>
        <!--客户姓名-->
    <LinearLayout
        android:id="@+id/ll_customer_name"
        android:paddingRight="@dimen/px55"
        android:paddingLeft="@dimen/px55"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px155">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:drawableLeft="@drawable/icon_customer_name"
            android:drawablePadding="@dimen/px30"
            android:gravity="center"
            android:text="@string/customer_name"
            android:textColor="@color/myValue_33"
            android:textSize="@dimen/xs44" />
        <android.support.design.widget.TextInputEditText
            android:background="@null"
            android:id="@+id/et_customer_name"
            android:textColorHint="@color/textHint_99"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textColor="@color/myValue_33"
            android:hint="@string/please_input_customer_name"
            android:textSize="@dimen/xs44"
            android:drawablePadding="@dimen/px30"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>
    <View
        android:background="@color/mainNavline_e7"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px2"/>
        <!--客户手机-->
    <LinearLayout
        android:id="@+id/ll_customer_phone"
        android:paddingRight="@dimen/px55"
        android:paddingLeft="@dimen/px55"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px155">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:drawableLeft="@drawable/icon_customer_phone"
            android:drawablePadding="@dimen/px30"
            android:gravity="center"
            android:text="@string/customer_phone"
            android:textColor="@color/myValue_33"
            android:textSize="@dimen/xs44" />
        <android.support.design.widget.TextInputEditText
            android:background="@null"
            android:id="@+id/et_customer_phone"
            android:textColorHint="@color/textHint_99"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textColor="@color/myValue_33"
            android:hint="@string/please_input_phone_number"
            android:textSize="@dimen/xs44"
            android:drawablePadding="@dimen/px30"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>
    <View
        android:background="@color/mainNavline_e7"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px2"/>
        <!--性别-->
        <LinearLayout
            android:id="@+id/ll_sex"
            android:paddingRight="@dimen/px55"
            android:paddingLeft="@dimen/px55"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px155">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:drawableLeft="@drawable/icon_sex"
                android:drawablePadding="@dimen/px30"
                android:gravity="center"
                android:text="@string/sex"
                android:textColor="@color/myValue_33"
                android:textSize="@dimen/xs44" />
            <TextView
                android:id="@+id/tv_sex"
                android:text="@string/women"
                android:drawableRight="@drawable/arrows_right_gray"
                android:textColorHint="@color/textHint_99"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:textColor="@color/myValue_33"
                android:textSize="@dimen/xs44"
                android:drawablePadding="@dimen/px50"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>
        <View
            android:background="@color/mainNavline_e7"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px2"/>
    <!--消费类型-->
    <LinearLayout
        android:id="@+id/ll_consumption_type"
        android:paddingRight="@dimen/px55"
        android:paddingLeft="@dimen/px55"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px155">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:drawableLeft="@drawable/consumption_type"
            android:drawablePadding="@dimen/px30"
            android:gravity="center"
            android:text="@string/consumption_type"
            android:textColor="@color/myValue_33"
            android:textSize="@dimen/xs44" />
        <TextView

            android:id="@+id/tv_consumption_type"
            android:drawableRight="@drawable/arrows_right_gray"
            android:textColorHint="@color/textHint_99"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textColor="@color/myValue_33"
            android:hint="@string/please_select_consumption_type"
            android:textSize="@dimen/xs44"
            android:drawablePadding="@dimen/px50"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>
    <View
        android:background="@color/mainNavline_e7"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px2"/>
        <!--门市接单点-->
    <LinearLayout
        android:id="@+id/ll_outlets_reception"
        android:paddingRight="@dimen/px55"
        android:paddingLeft="@dimen/px55"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px155">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:drawableLeft="@drawable/icon_outlets_reception"
            android:drawablePadding="@dimen/px30"
            android:gravity="center"
            android:text="@string/outlets_reception"
            android:textColor="@color/myValue_33"
            android:textSize="@dimen/xs44" />
        <TextView
            android:id="@+id/tv_outlets_reception"
            android:drawableRight="@drawable/arrows_right_gray"
            android:textColorHint="@color/textHint_99"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textColor="@color/myValue_33"
            android:hint="@string/please_selsect_outlets_reception"
            android:textSize="@dimen/xs44"
            android:drawablePadding="@dimen/px50"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:background="@color/mainNavline_e7"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px2"/>
        <!--接单点-->
    <LinearLayout
        android:id="@+id/ll_order_receiving_site"
        android:paddingRight="@dimen/px55"
        android:paddingLeft="@dimen/px55"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px155">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:drawableLeft="@drawable/icon_order_receiving_site"
            android:drawablePadding="@dimen/px30"
            android:gravity="center"
            android:text="@string/order_receiving_site"
            android:textColor="@color/myValue_33"
            android:textSize="@dimen/xs44" />
        <TextView
            android:id="@+id/tv_order_receiving_site"
            android:drawableRight="@drawable/arrows_right_gray"
            android:textColorHint="@color/textHint_99"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textColor="@color/myValue_33"
            android:hint="@string/please_select_order_receiving_site"
            android:textSize="@dimen/xs44"
            android:drawablePadding="@dimen/px50"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>
    <View
        android:background="@color/mainNavline_e7"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px2"/>
        <!--包套名称 -->
    <LinearLayout
        android:id="@+id/ll_package_set"
        android:paddingRight="@dimen/px55"
        android:paddingLeft="@dimen/px55"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px155">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:drawableLeft="@drawable/icon_package_set_name"
            android:drawablePadding="@dimen/px30"
            android:gravity="center"
            android:text="@string/package_set_of_names"
            android:textColor="@color/myValue_33"
            android:textSize="@dimen/xs44" />
        <TextView
            android:id="@+id/tv_package_set"
            android:drawableRight="@drawable/arrows_right_gray"
            android:textColorHint="@color/textHint_99"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textColor="@color/myValue_33"
            android:hint="@string/please_select_package_set"
            android:textSize="@dimen/xs44"
            android:drawablePadding="@dimen/px50"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>
    <View
        android:background="@color/mainNavline_e7"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px2"/>
        <!--新增产品-->
    <LinearLayout
        android:id="@+id/ll_addition"
        android:paddingRight="@dimen/px55"
        android:paddingLeft="@dimen/px55"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px155">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:drawableLeft="@drawable/icon_addition"
            android:drawablePadding="@dimen/px30"
            android:gravity="center"
            android:text="@string/addition"
            android:textColor="@color/myValue_33"
            android:textSize="@dimen/xs44" />
        <TextView
            android:id="@+id/tv_addition"
            android:drawableRight="@drawable/arrows_right_gray"
            android:textColorHint="@color/textHint_99"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:textColor="@color/myValue_33"
            android:hint="@string/zero"
            android:textSize="@dimen/xs44"
            android:drawablePadding="@dimen/px50"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>


       <!--其他信息-->
    <TextView
        android:id="@+id/tv_other_infromation"
        android:paddingLeft="@dimen/px55"
        android:paddingRight="@dimen/px55"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/arrows_down_gray"
        android:textColor="@color/myValue_33"
        android:background="@color/myBackground_f7"
        android:text="@string/information"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px123" />
     <LinearLayout
         android:visibility="gone"
        android:id="@+id/ll_other_information"
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <!--客户分区-->
         <LinearLayout
             android:id="@+id/ll_customer_zone"
             android:paddingRight="@dimen/px55"
             android:paddingLeft="@dimen/px55"
             android:layout_width="match_parent"
             android:layout_height="@dimen/px155">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_weight="0"
                 android:drawableLeft="@drawable/icon_customer_zone"
                 android:drawablePadding="@dimen/px30"
                 android:gravity="center"
                 android:text="@string/customer_zone"
                 android:textColor="@color/myValue_33"
                 android:textSize="@dimen/xs44" />
             <TextView
                 android:id="@+id/tv_vip_zone"
                 android:text="@string/vip_zone"
                 android:drawableRight="@drawable/arrows_right_gray"
                 android:textColorHint="@color/textHint_99"
                 android:layout_weight="1"
                 android:gravity="center_vertical|right"
                 android:textColor="@color/myValue_33"
                 android:hint="@string/please_input_phone_number"
                 android:textSize="@dimen/xs44"
                 android:drawablePadding="@dimen/px50"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent" />

         </LinearLayout>
         <View
             android:background="@color/mainNavline_e7"
             android:layout_width="wrap_content"
             android:layout_height="@dimen/px2"/>
         <!--接单助理-->
         <LinearLayout
             android:id="@+id/ll_reception"
             android:paddingRight="@dimen/px55"
             android:paddingLeft="@dimen/px55"
             android:layout_width="match_parent"
             android:layout_height="@dimen/px155">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_weight="0"
                 android:drawableLeft="@drawable/icon_reception"
                 android:drawablePadding="@dimen/px30"
                 android:gravity="center"
                 android:text="@string/reception"
                 android:textColor="@color/myValue_33"
                 android:textSize="@dimen/xs44" />

             <TextView
                 android:id="@+id/tv_reception"
                 android:text="@string/lixiaoxiao"
                 android:drawableRight="@drawable/arrows_right_gray"
                 android:textColorHint="@color/textHint_99"
                 android:layout_weight="1"
                 android:gravity="center_vertical|right"
                 android:textColor="@color/myValue_33"
                 android:textSize="@dimen/xs44"
                 android:drawablePadding="@dimen/px50"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent" />

         </LinearLayout>
         <View
             android:background="@color/mainNavline_e7"
             android:layout_width="wrap_content"
             android:layout_height="@dimen/px2"/>
<!--婚期-->
         <LinearLayout
             android:id="@+id/ll_marriage_date"
             android:paddingRight="@dimen/px55"
             android:paddingLeft="@dimen/px55"
             android:layout_width="match_parent"
             android:layout_height="@dimen/px155">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_weight="0"
                 android:drawableLeft="@drawable/icon_marry_date"
                 android:drawablePadding="@dimen/px30"
                 android:gravity="center"
                 android:text="@string/marriage_date"
                 android:textColor="@color/myValue_33"
                 android:textSize="@dimen/xs44" />

             <TextView
                android:id="@+id/tv_marriage_date"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:drawablePadding="@dimen/px50"
                 android:drawableRight="@drawable/arrows_right_gray"
                 android:gravity="center_vertical|right"
                 android:hint="@string/please_select_marriage_date"
                 android:textColor="@color/myValue_33"
                 android:textColorHint="@color/textHint_99"
                 android:textSize="@dimen/xs44" />

         </LinearLayout>
         <View
             android:background="@color/mainNavline_e7"
             android:layout_width="wrap_content"
             android:layout_height="@dimen/px2"/>
    <!--客户备注-->
         <LinearLayout
             android:id="@+id/ll_customer_remarks"
             android:paddingRight="@dimen/px55"
             android:paddingLeft="@dimen/px55"
             android:layout_width="match_parent"
             android:layout_height="@dimen/px155">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_weight="0"
                 android:drawableLeft="@drawable/icon_customer_remarks"
                 android:drawablePadding="@dimen/px30"
                 android:gravity="center"
                 android:text="@string/customer_remarks"
                 android:textColor="@color/myValue_33"
                 android:textSize="@dimen/xs44" />
             <android.support.design.widget.TextInputEditText
                 android:id="@+id/et_customer_remarks"
                 android:background="@null"
                 android:textColorHint="@color/textHint_99"
                 android:layout_weight="1"
                 android:gravity="center_vertical|left"
                 android:textColor="@color/myValue_33"
                 android:hint="@string/please_input_customer_remarks"
                 android:textSize="@dimen/xs44"
                 android:drawablePadding="@dimen/px30"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent" />

         </LinearLayout>
         <View
             android:background="@color/mainNavline_e7"
             android:layout_width="wrap_content"
             android:layout_height="@dimen/px2"/>
        <!--摄影备注-->
         <LinearLayout
             android:id="@+id/ll_photography_remarks"
             android:paddingRight="@dimen/px55"
             android:paddingLeft="@dimen/px55"
             android:layout_width="match_parent"
             android:layout_height="@dimen/px155">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_weight="0"
                 android:drawableLeft="@drawable/icon_photography_remarks"
                 android:drawablePadding="@dimen/px30"
                 android:gravity="center"
                 android:text="@string/photographic_remarks"
                 android:textColor="@color/myValue_33"
                 android:textSize="@dimen/xs44" />
             <android.support.design.widget.TextInputEditText
                 android:id="@+id/et_photography_remarks"
                 android:background="@null"
                 android:textColorHint="@color/textHint_99"
                 android:layout_weight="1"
                 android:gravity="center_vertical"
                 android:textColor="@color/myValue_33"
                 android:hint="@string/please_fill_in_photography_remarks"
                 android:textSize="@dimen/xs44"
                 android:drawablePadding="@dimen/px30"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent" />

         </LinearLayout>
         <View
             android:background="@color/mainNavline_e7"
             android:layout_width="wrap_content"
             android:layout_height="@dimen/px2"/>
     </LinearLayout>
        <Button
            android:id="@+id/btn_submint_order"
            android:textSize="@dimen/xs42"
            android:textColor="@color/white"
            android:background="@drawable/login_button_sp"
            android:layout_marginTop="@dimen/px100"
            android:layout_marginBottom="@dimen/px33"
            android:layout_marginLeft="@dimen/px55"
            android:layout_marginRight="@dimen/px55"
            android:text="@string/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
     </LinearLayout>
</ScrollView>
