<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px55"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingTop="@dimen/px45"
        android:paddingBottom="@dimen/px45"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px55"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_zone"
            android:textColor="@color/myValue_33"
            android:textSize="@dimen/xs34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_custmoer"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/px55"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            android:text="111"
            style="@style/ArrowsRight" />
        <LinearLayout
            android:id="@+id/ll_scheme"
            android:paddingRight="@dimen/px55"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_scheme"
                android:src="@drawable/icon_schedule_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img_placeholder"
                android:layout_marginLeft="@dimen/px30"
                android:src="@drawable/icon_schedule_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View style="@style/line"/>
</LinearLayout>