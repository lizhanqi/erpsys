<resources>
    <!--启动页-->
    <style name="WelcomeStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/themeColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--没有默认的ActionBar,去掉可以使用Toolbar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="LoginTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorAccent">@color/themeColor</item>
        <item name="android:textColorHint">@color/copyrigth</item>
        <item name="colorControlNormal">@color/themeColor</item>
        <item name="colorControlActivated">@color/themeColor</item>
        <item name="colorControlHighlight">@color/themeColor</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <!--Toolbar的-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--融云loadingdiarlog-->
    <style name="WinDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!-- 右上角popupwindow -->
    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <style name="convertion" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--修改toolbar的弹窗位置的样式-->
    <style name="OverflowMenuStyle"  parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:animationDuration">600</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">@android:color/darker_gray</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <!--为什么在7.0上这个设置无效-->
        <item name="android:dropDownVerticalOffset">50dp</item>
        <item name="android:dropDownAnchor">@id/toolbar</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">-10dp</item>
        <item name="android:scrollbars">none</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@color/textColor</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
    </style>

    <!--ffffffffffffffffffffffffffffffffffffffffff控件属性fffffffffffffffffffffffffffffffffffffffff-->


    <!--没有数据的-->
    <style name="notData">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bgColor_divier</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!--一个横线-->
    <style name="line">
        <item name="android:id">@id/line</item>
        <item name="android:background">@color/mainNavline_e7</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px2</item>
    </style>

    <style name="VerticalDecorate">
        <item name="android:background">@color/themeColor</item>
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">15dp</item>
    </style>


    <!--这个是标准的包裹内容,不要定义死了高度,否则文字大小不会影响高度-->
    <style name="LinearLayoutStandard2">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">@dimen/px55</item>
        <item name="android:paddingLeft">@dimen/px55</item>
        <item name="android:paddingBottom">@dimen/px40</item>
        <item name="android:paddingTop">@dimen/px40</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--key-->
    <style name="DetailsKey" >
        <item name="android:layout_gravity">top</item>
        <item name="android:padding">@dimen/px10</item>
        <item name="android:drawablePadding">@dimen/px30</item>
        <item name="android:textSize">@dimen/xs44</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/myValue_33</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">top|left</item>
        <item name="android:textIsSelectable">false</item>
    </style>
    <!--数据-->
    <style name="DetailsValue" parent="DetailsKey">
        <item name="android:textIsSelectable">false</item>
        <item name="android:layout_marginLeft">@dimen/px30</item>
        <item name="android:textColor">@color/textHint_99</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColorHint">@color/textHint_99</item>
    </style>
    <!--表单值-->
    <style name="FormValue" parent="DetailsValue">
        <item name="android:textIsSelectable">false</item>
        <item name="android:hint">请输入</item>
    </style>
    <!--文本域-->
    <style name="TextAreaKey" parent="DetailsKey">
    </style>
    <style name="TextAreaValue" parent="FormValue">
        <item name="android:textIsSelectable">false</item>
        <item name="android:minLines">3</item>
    </style>
    <!--表单类型选择类的-->
    <style name="FormOptionValue" parent="FormValue">
        <item name="android:hint">请选择</item>
        <item name="android:drawableRight">@drawable/arrows_right_gray</item>
    </style>
    <!--数字类型输入-->
    <style name="InputNumber" parent="FormValue">
        <item name="android:inputType">number</item>
    </style>
    <!--小数类型输入-->
    <style name="InputDecimals" parent="FormValue">
        <item name="android:inputType">numberDecimal</item>
    </style>
    <!--手机号类型输入-->
    <style name="InputPhone" parent="FormValue">
        <item name="android:drawableRight">@null</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">11</item>
    </style>
    <!--必填项key-->
    <style name="FormKeyMust" parent="DetailsKey">
        <item name="android:textColor">@color/litte_red</item>
    </style>
    <!--必填项key-->
    <style name="FormOptionValueMust" parent="FormOptionValue">
        <item name="android:hint">请选择(必选)</item>
    </style>
    <!--必填项key-->
    <style name="FormValueMust" parent="FormValue">
        <item name="android:hint">请输入(必选)</item>
    </style>
    <!--客户信息-->
    <style name="CustomerInformationKey" parent="DetailsKey" >
    </style>
    <style name="CustomerInformationValue" parent="DetailsValue">
        <item name="android:textColor">@color/myValue_33</item>
    </style>

    <style name="EditNormal" parent="CustomerInformationValue">
        <item name="android:editable">false</item>
        <item name="android:background">@null</item>
    </style>
    <style name="CustomerInformationContain" parent="LinearLayoutStandard">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/px55</item>
        <item name="android:paddingRight">@dimen/px55</item>
    </style>
    <!--这个是标准的包裹内容,不要定义死了高度,否则文字大小不会影响高度-->
    <style name="LinearLayoutStandard">
        <item name="android:background">@color/white</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">@dimen/px55</item>
        <item name="android:paddingLeft">@dimen/px55</item>
        <item name="android:paddingBottom">@dimen/px40</item>
        <item name="android:paddingTop">@dimen/px40</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Standard" parent="DetailsValue">
    </style>
    <style name="ArrowsRight" parent="DetailsValue">
        <item name="android:drawableRight">@drawable/arrows_right_gray</item>
        <item name="android:textColor">@color/textHint_99</item>
    </style>




    <!--排程名称-->
    <style name="ScheduleTypeName">
        <item name="android:textColor">@color/myValue_33</item>
        <item name="android:textSize">@dimen/xs48</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--排程信息-->
    <style name="ScheduleTypeInfromation" parent="ScheduleTypeName">
        <item name="android:textColor">@color/textHint_99</item>
        <item name="android:textSize">@dimen/xs44</item>
    </style>
    <!--排程-->
    <style name="ScheduleTypeWrap" parent="ScheduleTypeName">
        <item name="android:layout_marginLeft">@dimen/px35</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="ScheduleType">
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/px40</item>
        <item name="android:paddingTop">@dimen/px40</item>
        <item name="android:paddingLeft">@dimen/px55</item>
        <item name="android:paddingRight">@dimen/px55</item>
    </style>

    <!--仿小米弹窗-->
    <!--Dialog动画-->
    <style name="dialog_animation">
        <item name="android:windowEnterAnimation">@anim/dialog_animation_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_animation_out</item>
    </style>

    <style name="style_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
    <!--仿照小米end-->


</resources>
