<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--没有默认的ActionBar,去掉可以使用Toolbar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/themeColor</item>
        <item name="android:textColorHint">@color/copyrigth</item>
        <item name="colorControlNormal">@color/themeColor</item>
        <item name="colorControlActivated">@color/themeColor</item>
        <item name="colorControlHighlight">@color/themeColor</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
        <!--Toolbar的-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
